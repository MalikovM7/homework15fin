
@model Country
@{
    Layout = "_Layout";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>


    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name" aria-describedby="nameHelp">
                    <div id="nameHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Surname</label>
                    <input class="form-control" asp-for="Code" aria-describedby="surnameHelp">
                    <div id="surnameHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <input asp-for="Id" hidden />
                <button type="submit" class="btn btn-primary">Yadda saxla</button>
            </form>
        </div>
    </div>


</body>
</html>
